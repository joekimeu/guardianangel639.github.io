{
  "name": "guardian-angel-health-agency-server",
  "version": "1.0.0",
  "description": "Secure backend server for Guardian Angel Health Agency",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "security-check": "npm audit && snyk test",
    "lint": "eslint .",
    "test": "jest --coverage",
    "migrate": "node scripts/migrate.js",
    "backup": "node scripts/backup.js",
    "cert-check": "node scripts/check-certificates.js"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "connect-redis": "^7.1.0",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.1",
    "express-session": "^1.17.3",
    "helmet": "^7.0.0",
    "hpp": "^0.2.3",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "qrcode": "^1.5.3",
    "rate-limit-redis": "^3.0.2",
    "speakeasy": "^2.0.0",
    "uuid": "^9.0.1",
    "validator": "^13.11.0",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "eslint": "^8.51.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-security": "^1.7.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "snyk": "^1.1240.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "plugin:security/recommended"
    ],
    "plugins": [
      "security"
    ]
  }
}
